<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0-browser</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <JsonSerializerIsReflectionEnabledByDefault>true</JsonSerializerIsReflectionEnabledByDefault>
    <Nullable>enable</Nullable>
    <AssemblyName>Sanet.MakaMek.MapEditor.Browser</AssemblyName>
    <RootNamespace>Sanet.MakaMek.MapEditor.Browser</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>partial</TrimMode>
    <TrimmerDefaultAction>link</TrimmerDefaultAction>
  </PropertyGroup>
  <ItemGroup>
    <!-- Preserve the entire command model namespace -->
    <TrimmerRootAssembly Include="Sanet.MakaMek.Core" />
    <TrimmerRootDescriptor Include="TrimmerRoots.xml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia.Browser" Version="11.3.12" />
    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Microsoft.DotNet.HotReload.WebAssembly.Browser" Version="10.0.103" PrivateAssets="all" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\MakaMek.MapEditor\MakaMek.MapEditor.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="wwwroot\app.css" />
    <Content Include="wwwroot\app.css" />
    <None Remove="wwwroot\cacheStorage.js" />
    <Content Include="wwwroot\cacheStorage.js" />
    <None Remove="wwwroot\favicon.ico" />
    <Content Include="wwwroot\favicon.ico" />
    <None Remove="wwwroot\index.html" />
    <Content Include="wwwroot\index.html" />
    <None Remove="wwwroot\logo.png" />
    <Content Include="wwwroot\logo.png" />
    <None Remove="wwwroot\main.js" />
    <Content Include="wwwroot\main.js" />
  </ItemGroup>

</Project>
